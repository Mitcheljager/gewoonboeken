<picture data-theme>
  <source <%= "data-" if theme.present? %>srcset="<%= vite_asset_path("images/doodle-reader-light.png") %>" media="(prefers-color-scheme: light)">
  <source <%= "data-" if theme.present? %>srcset="<%= vite_asset_path("images/doodle-reader-dark.png") %>" media="(prefers-color-scheme: dark)">

  <img
    src="<%= vite_asset_path("images/doodle-reader-#{theme || "light"}.png") %>"
    width="700"
    height="442"
    alt="Illustratie van een lezende vrouw zittend op een stoel."
    fetchpriority="high">
</picture>
