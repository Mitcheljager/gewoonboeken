<div>
  <p>
    <strong>Title:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong>Authors:</strong>
    <% book.authors.each do |author| %>
      <span><%= author.name %></span>
    <% end %>
  </p>

  <p>
    <strong>Isbn:</strong>
    <%= book.isbn %>
  </p>

  <p>
    <strong>Number of listings:</strong>
    <%= book.listings_with_price.size %>
  </p>

  <%= link_to "Show this book", admin_book_path(book) %>

  <hr>
</div>
