<div id="<%= dom_id book %>">
  <%= image_tag book.cover_image.variant(:small), height: 200 if book.cover_image.attached? %>

  <p>
    <strong>Title:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong>Subtitle:</strong>
    <%= book.subtitle %>
  </p>

  <p>
    <strong>Authors:</strong>
    <% book.authors.each do |author| %>
      <span><%= author.name %></span>
    <% end %>
  </p>

  <p>
    <strong>Genres:</strong>
    <% book.genres.each do |genre| %>
      <span><%= genre.name %></span>
    <% end %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= book.description %>
  </p>

  <p>
    <strong>Isbn:</strong>
    <%= book.isbn %>
  </p>

  <p>
    <strong>Number of pages:</strong>
    <%= book.formatted_number_of_pages %>
  </p>

  <p>
    <strong>Language:</strong>
    <%= book.language %>
  </p>

  <p>
    <strong>Format:</strong>
    <%= book.format %>
  </p>

  <p>
    <strong>Number of listings:</strong>
    <%= book.listings_with_price.size %>
  </p>
</div>
